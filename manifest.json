{
  "manifest_version": 3,
  "name": "ADO Highlighter",
  "version": "0.2.0",
  "description": "ADO Highlighter",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://microsoft.visualstudio.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}