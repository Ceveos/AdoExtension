{
  "manifest_version": 3,
  "name": "ADO Highlighter for Microsoft",
  "version": "0.4.0",
  "description": "ADO Highlighter for Microsoft ADO",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "content.js",
        "proposed.js"
      ],
      "matches": [
        "https://microsoft.visualstudio.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "ado2a16.png",
    "32": "ado2a32.png",
    "64": "ado2a64.png",
    "128": "ado2a128.png"
  }
}