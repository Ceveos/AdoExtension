{
  "manifest_version": 3,
  "name": "ADO Powertools",
  "version": "1.0.0",
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "src/assets/icons/16.png",
      "32": "src/assets/icons/32.png"
    },
    "default_title": "ADO Power Tools",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [{
    "resources": ["src/inject.js"],
    "matches": ["*://*.visualstudio.com/*"]
  }],
  "content_scripts": [
    {
      "js": [
        "src/ado/content.js",
        "src/ado/generate.ts",
        "src/ado/proposed.js"
      ],
      "matches": [
        "*://*.visualstudio.com/*",
        "https://dev.azure.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "src/assets/icons/32.png",
    "64": "src/assets/icons/64.png",
    "128": "src/assets/icons/128.png"
  }
}